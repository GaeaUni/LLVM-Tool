{
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=build/llvm/Debug",
        "-j=8",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
        "--cross-file-rename",
        "--enable-config",
        "--fallback-style=WebKit",
        "--pretty",
        "--clang-tidy",
        "--query-driver=/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/c++",
    ],
    "makefile.extensionOutputFolder": "./build",
    "search.exclude": {
        "**/build": true
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "editor.formatOnSave": true,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "cmake.sourceDirectory": "${workspaceFolder}/llvm-project/llvm",
    "makefile.configurationCachePath": "build/configurationCache.log"
}