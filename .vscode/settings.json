{
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=build/LLDBPlugin",
        "-j=8",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--pch-storage=memory",
        "--cross-file-rename",
        "--enable-config",
        "--fallback-style=WebKit",
        "--pretty",
        "--clang-tidy",
        "--query-driver=/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/c++",
    ],
    "makefile.extensionOutputFolder": "./build/extensionOutputFolder",
    "search.exclude": {
        "**/build": true
    },
    "[objective-cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[objective-c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[python]": {
        "editor.wordBasedSuggestions": false,
        "editor.defaultFormatter": "ms-python.python"
    },
    "editor.formatOnSave": true,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "cmake.sourceDirectory": "${workspaceFolder}/packages/lldb-plugin",
    "cmake.buildDirectory": "${workspaceFolder}/build/LLDBPlugin",
    "python.defaultInterpreterPath": "/Applications/Xcode.app/Contents/Developer/Library/Frameworks/Python3.framework/Versions/Current/bin/python3",
    "python.autoComplete.extraPaths": [
        "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Resources/Python"
    ],
    "python.analysis.extraPaths": [
        "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Resources/Python"
    ],
}