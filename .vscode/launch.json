{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "CallGraph",
            "preLaunchTask": "CallGraph",
            "program": "${workspaceFolder}/packages/call-graph/bin/call-graph",
            "args": [
                "-p",
                "/Volumes/T7/company/LLVM-Tool/packages/call-graph/tmp/compile_commands.json",
                "/Volumes/T7/company/LLVM-Tool/packages/call-graph/tmp/diff.json"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lldbDebug",
            "preLaunchTask": "lldbDebugBuild",
            "program": "${workspaceFolder}/build/llvm/Debug/bin/lldb",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "TestLLDBPlugin",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "/Applications/Xcode.app/Contents/Developer/usr/bin/xctest",
            "args": [
                "${workspaceFolder}/build/LLDBPlugin/LLDBPluginTests.xctest",
            ],
            "preLaunchTask": "lldbPluginTestsBuild",
        },
        {
            "name": "LaunchPython",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/packages/lldb-plugin/script/main.py",
            "env": {
                "PYTHONPATH" : "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Resources/Python"
            }
        }
    ]
}